class Solution {
public:
    int concatenatedBinary(int n) {
        long long ans = 0;
        const int MOD = 1e9 + 7;

        for (int i = 1; i <= n; i++) {
            int len = 0;
            int temp = i;
            while (temp > 0) {
                len++;
                temp >>= 1;
            }
            ans = ((ans << len) % MOD + i) % MOD;
        }
        return ans;
    }
};
