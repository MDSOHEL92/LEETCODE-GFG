class Solution {
  public:
    int findMinDiff(vector<int>& arr, int m) {
        // code here
        if(arr.size() < m) return -1;
        
        sort(arr.begin(), arr.end());
        int minDiff = INT_MAX;
        
        for(int i=0; i<=arr.size() -m; i++){
            int diff = arr[i+m-1] - arr[i];
            minDiff = min(minDiff, diff);
        }
        return minDiff;
    }
};
