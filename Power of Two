class Solution {
private:
    bool solve(int n) {
        if (n == 1)
            return true;

        if (n % 2 != 0)
            return false;

        return solve(n / 2);
    }

public:
    bool isPowerOfTwo(int n) {
        if (n <= 0)
            return false;

        return solve(n);
    }
};
