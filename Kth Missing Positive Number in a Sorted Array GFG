class Solution {
  public:
    int kthMissing(vector<int> &arr, int k) {
        // code here
         int n=arr.size();
        int l=-1,r=n-1,i;
        while(l<=r){
            int m=(l+r)/2;
            int x=k+1+m;
            if(m!=-1 and x<=arr[m]){
                r=m-1;
            }else{
                if(m+1==n or x<arr[m+1]){
                    i=m;
                    break;
                }else
                    l=m+1;
            }
        }
        return k+1+i;
    }
};
