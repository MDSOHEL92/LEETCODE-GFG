class Solution {
public:
    long long distributeCandies(int n, int limit) {
        long long result = 0;

        for (int i = 0; i <= min(n, limit); ++i) {
            for (int j = 0; j <= min(n - i, limit); ++j) {
                int k = n - 1 - j;
                if (k <= limit) {
                    result += 1;
                }
            }
        }
        return result;
    }
};
