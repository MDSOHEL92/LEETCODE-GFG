class Solution {
  public:
    vector<vector<int>> kClosest(vector<vector<int>>& points, int k) {
        // code here
        vector<pair<int, vector<int>>> pointsWithDistance;
        
        for(auto& point : points){
            int distance = point[0]*point[0]+point[1]*point[1];
            pointsWithDistance.push_back({distance, point});
        }
        sort(pointsWithDistance.begin(), pointsWithDistance.end());
        
        vector<vector<int>> result;
        for(int i=0; i<k; ++i){
            result.push_back(pointsWithDistance[i].second);
        }
        return result;
    }
};
