class Solution {
  public:
    vector<int> countXInRange(vector<int>& arr, vector<vector<int>>& queries) {
        // code here
         vector<int> results;
        for (auto& query : queries) {
            int l = query[0], r = query[1], x = query[2];
            results.push_back(upper_bound(arr.begin() + l, arr.begin() + r + 1, x) - 
                              lower_bound(arr.begin() + l, arr.begin() + r + 1, x));
        }
        return results;
    }
};
